<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="cardpay_order_management" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Order Management</label>

        <field id="heading_order_status" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Automatic update of Order Status</label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Field\Heading</frontend_model>
            <attribute type="shared">1</attribute>
        </field>

        <field id="order_status_authorized" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Order status when payment is authorized</label>
            <source_model>Cardpay\Core\Model\System\Config\Source\Order\Status</source_model>
            <config_path>payment/cardpay/order_status_authorized</config_path>
        </field>
        <field id="order_status_cancelled" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Order status when payment is canceled</label>
            <source_model>Cardpay\Core\Model\System\Config\Source\Order\Status</source_model>
            <config_path>payment/cardpay/order_status_cancelled</config_path>
        </field>
        <field id="order_status_rejected" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Order status when payment is rejected</label>
            <source_model>Cardpay\Core\Model\System\Config\Source\Order\Status</source_model>
            <config_path>payment/cardpay/order_status_rejected</config_path>
        </field>
        <field id="order_status_chargeback" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Order status when payment is chargeback</label>
            <source_model>Cardpay\Core\Model\System\Config\Source\Order\Status</source_model>
            <config_path>payment/cardpay/order_status_chargeback</config_path>
        </field>

        <field id="refund_available" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Refund payment</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/cardpay/refund_available</config_path>
            <comment>Enable payment refund when a Credit Memo is created, the refund will occur if the payment is Approved.</comment>
        </field>
    </group>
</include>