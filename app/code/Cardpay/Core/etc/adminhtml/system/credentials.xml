<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="cardpay_credentials" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Credentials</label>

        <field id="mode" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Terminal Code</label>
            <config_path>payment/cardpay/terminal_code</config_path>
        </field>

        <field id="access_token" translate="label comment" type="password" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Terminal Password</label>
            <config_path>payment/cardpay/terminal_password</config_path>
            <comment>Get your credentials, visit the unlimint.com</comment>
        </field>

        <field id="callback_secret" translate="label" type="password" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Callback Secret</label>
            <config_path>payment/cardpay/callback_secret</config_path>
        </field>

        <field id="sandbox" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Test environment?</label>
            <config_path>payment/cardpay/sandbox</config_path>
            <comment>In test mode, the data is sent to the sandbox.</comment>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
    </group>
</include>